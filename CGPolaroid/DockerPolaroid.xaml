<UserControl x:Class="DockerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinWidth="225">
    <Grid Margin="0,0,0,0" RenderTransformOrigin="0.582,0.807">
        <StackPanel Grid.RowSpan="2">
            <StackPanel Height="497" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <GroupBox Header="Import Foto dari Folder" Height="80" Margin="5">
                    <Grid Margin="2,2,0,-4" VerticalAlignment="Center">
                        <TextBox x:Name="t_alamat" Height="24" Margin="0,4,0,0" VerticalAlignment="Top" IsReadOnly="True"/>
                        <Button x:Name="bt_Browse" Content="Cari..." Margin="124,33,1,0" VerticalAlignment="Top"/>
                        <CheckBox x:Name="cb_garisoutline" Content="Beri Garis Outline" Margin="0,36,85,9"/>
                    </Grid>
                </GroupBox>
                <Button x:Name="bt_createPolaroid" Content="Buat Polaroid" Margin="5,0,5,5" Height="35"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
